{
  "name": "container-queries",
  "version": "0.0.1",
  "description": "Simple container queries for Shopify's admin.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint . --max-warnings 0",
    "test": "mocha test/ --recursive --compilers js:babel-core/register --reporter spec",
    "test:cover": "babel-node $(npm bin)/isparta cover --reporter text --reporter html $(npm bin)/_mocha test/ -- --recursive --reporter spec",
    "test:watch": "npm test -- --watch --reporter min",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/container-queries.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/container-queries.min.js --config webpack.config.production.js",
    "build": "npm run clean && npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
  "author": "= <=>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.21",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-shopify": "^5.7.1",
    "eslint-plugin-react": "^3.11.3",
    "eslint-plugin-shopify": "^2.0.1",
    "express": "^4.13.3",
    "isparta": "^4.0.0",
    "jsdom": "^7.2.1",
    "mocha": "^2.3.4",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  }
}
